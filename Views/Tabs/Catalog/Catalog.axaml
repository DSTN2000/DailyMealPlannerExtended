<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DailyMealPlannerExtended.ViewModels"
             xmlns:models="using:DailyMealPlannerExtended.Models"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="DailyMealPlannerExtended.Views.Catalog"
             x:DataType="vm:CatalogViewModel"
             x:CompileBindings="True">

    <Design.DataContext>
        <vm:CatalogViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="*,300" Margin="16">
        <!-- Main Content Area - Left Side -->
        <Grid Grid.Column="0" RowDefinitions="Auto,*,Auto" Margin="0,0,16,0">
            <!-- Search Bar -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,16">
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText}"
                         Watermark="Search products..."
                         CornerRadius="16"
                         Padding="16,12">
                    <TextBox.InnerLeftContent>
                        <materialIcons:MaterialIcon Kind="Magnify"
                                                    Width="20"
                                                    Height="20"
                                                    Margin="12,0,0,0"/>
                    </TextBox.InnerLeftContent>
                </TextBox>

                <StackPanel Grid.Column="1"
                           Orientation="Horizontal"
                           Spacing="8"
                           Margin="8,0,0,0">
                    <TextBlock Text="{Binding TotalCount, StringFormat='{}{0} results'}"
                              VerticalAlignment="Center"
                              Opacity="0.6"
                              Margin="0,0,8,0"/>
                    <Button Command="{Binding ClearFiltersCommand}"
                            CornerRadius="16"
                            Padding="16,12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <materialIcons:MaterialIcon Kind="FilterRemove" Width="20" Height="20"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Products List -->
            <Border Grid.Row="1"
                    CornerRadius="16"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource MaterialDividerBrush}">

                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding Products}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:Product">
                                <Border Margin="8"
                                        Padding="16"
                                        CornerRadius="12"
                                        Background="{DynamicResource MaterialCardBackgroundBrush}"
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource MaterialDividerBrush}"
                                        PointerPressed="ProductCard_PointerPressed"
                                        Cursor="Hand">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <!-- Product Info -->
                                        <StackPanel Grid.Column="0" Spacing="8">
                                            <TextBlock Text="{Binding Name}"
                                                      FontSize="18"
                                                      FontWeight="SemiBold"/>

                                            <!-- Alternate Names -->
                                            <ItemsControl ItemsSource="{Binding AltNames}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate DataType="x:String">
                                                        <Border Background="#40808080"
                                                               CornerRadius="8"
                                                               Padding="6,3"
                                                               Margin="0,0,4,4">
                                                            <TextBlock Text="{Binding}"
                                                                      FontSize="11"
                                                                      Opacity="0.8"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <TextBlock Text="{Binding Description}"
                                                      TextWrapping="Wrap"
                                                      TextTrimming="CharacterEllipsis"
                                                      Opacity="0.7"
                                                      MaxLines="2"/>

                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <Border Background="{DynamicResource MaterialPrimaryLightBrush}"
                                                       CornerRadius="8"
                                                       Padding="8,4">
                                                    <TextBlock Text="{Binding Category}"
                                                              FontSize="12"/>
                                                </Border>

                                                <ItemsControl ItemsSource="{Binding Labels}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate DataType="x:String">
                                                            <Border Background="{DynamicResource MaterialSecondaryLightBrush}"
                                                                   CornerRadius="8"
                                                                   Padding="6,3"
                                                                   Margin="4,0">
                                                                <TextBlock Text="{Binding}"
                                                                          FontSize="11"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>

                                            <!-- Nutritional Info Summary -->
                                            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <TextBlock Text="Cal:" FontSize="12" Opacity="0.6"/>
                                                    <TextBlock Text="{Binding Calories, StringFormat='{}{0:F0}'}" FontSize="12" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <TextBlock Text="P:" FontSize="12" Opacity="0.6"/>
                                                    <TextBlock Text="{Binding Protein, StringFormat='{}{0:F1}g'}" FontSize="12" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <TextBlock Text="F:" FontSize="12" Opacity="0.6"/>
                                                    <TextBlock Text="{Binding TotalFat, StringFormat='{}{0:F1}g'}" FontSize="12" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <TextBlock Text="C:" FontSize="12" Opacity="0.6"/>
                                                    <TextBlock Text="{Binding Carbohydrates, StringFormat='{}{0:F1}g'}" FontSize="12" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Right Column: Serving Size and Action Button -->
                                        <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Center">
                                            <!-- Serving Size -->
                                            <Border CornerRadius="8"
                                                   Background="{DynamicResource MaterialCardBackgroundBrush}"
                                                   BorderThickness="1"
                                                   BorderBrush="{DynamicResource MaterialDividerBrush}"
                                                   Padding="8,4"
                                                   IsVisible="{Binding Serving, Converter={x:Static ObjectConverters.IsNotNull}}">
                                                <TextBlock FontSize="11" Opacity="0.7" TextAlignment="Center">
                                                    <Run Text="Serving:"/>
                                                    <LineBreak/>
                                                    <Run Text="{Binding Serving, StringFormat='{}{0:F0}'}" FontWeight="SemiBold"/>
                                                    <Run Text="{Binding Unit}"/>
                                                </TextBlock>
                                            </Border>

                                            <!-- Action Button -->
                                            <Button CornerRadius="12"
                                                   Padding="12"
                                                   Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).AddToMealPlanViewModel.ShowForProductCommand}"
                                                   CommandParameter="{Binding}">
                                                <materialIcons:MaterialIcon Kind="Plus" Width="24" Height="24"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.Row="1"
                    Background="#80000000"
                    IsVisible="{Binding IsLoading}"
                    CornerRadius="16">
                <ProgressBar IsIndeterminate="True"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="200"/>
            </Border>

            <!-- Pagination Controls -->
            <Border Grid.Row="2"
                    Margin="0,16,0,0"
                    CornerRadius="16"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource MaterialDividerBrush}"
                    Padding="16">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           Spacing="8">
                    <Button Command="{Binding GoToPreviousPageCommand}"
                           CornerRadius="12"
                           Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <materialIcons:MaterialIcon Kind="ChevronLeft" Width="20" Height="20"/>
                            <TextBlock Text="Previous"/>
                        </StackPanel>
                    </Button>

                    <Border VerticalAlignment="Center"
                           CornerRadius="8"
                           Background="{DynamicResource MaterialCardBackgroundBrush}"
                           Padding="12,8">
                        <TextBlock>
                            <Run Text="Page"/>
                            <Run Text="{Binding CurrentPage}" FontWeight="SemiBold"/>
                            <Run Text="of"/>
                            <Run Text="{Binding TotalPages}" FontWeight="SemiBold"/>
                        </TextBlock>
                    </Border>

                    <Button Command="{Binding GoToNextPageCommand}"
                           CornerRadius="12"
                           Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="Next"/>
                            <materialIcons:MaterialIcon Kind="ChevronRight" Width="20" Height="20"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Filters Panel - Right Side -->
        <Border Grid.Column="1"
                CornerRadius="16"
                BorderThickness="1"
                BorderBrush="{DynamicResource MaterialDividerBrush}"
                Padding="16">

            <ScrollViewer>
                <StackPanel Spacing="24">
                    <TextBlock Text="Filters"
                              FontSize="20"
                              FontWeight="SemiBold"/>

                    <!-- Category Filter -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Category"
                                  FontWeight="Medium"/>
                        <ComboBox ItemsSource="{Binding Types}"
                                 SelectedItem="{Binding SelectedType}"
                                 PlaceholderText="All Categories"
                                 HorizontalAlignment="Stretch"
                                 CornerRadius="12"/>
                    </StackPanel>

                    <!-- Labels Filter -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Labels"
                                  FontWeight="Medium"/>

                        <!-- Selected Labels -->
                        <ItemsControl ItemsSource="{Binding SelectedLabels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="x:String">
                                    <Border Background="{DynamicResource MaterialPrimaryLightBrush}"
                                           CornerRadius="12"
                                           Padding="12,6"
                                           Margin="4">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{Binding}" FontSize="12"/>
                                            <Button Padding="2"
                                                   Background="Transparent"
                                                   Command="{Binding $parent[UserControl].((vm:CatalogViewModel)DataContext).RemoveLabelCommand}"
                                                   CommandParameter="{Binding}">
                                                <materialIcons:MaterialIcon Kind="Close" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Available Labels -->
                        <ComboBox ItemsSource="{Binding AvailableLabels}"
                                 PlaceholderText="Add label..."
                                 HorizontalAlignment="Stretch"
                                 CornerRadius="12"
                                 SelectionChanged="OnLabelSelected"/>
                    </StackPanel>

                    <!-- Nutritional Info Guide -->
                    <Border Background="{DynamicResource MaterialCardBackgroundBrush}"
                           CornerRadius="12"
                           Padding="12"
                           Margin="0,16,0,0">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Per 100g/100ml"
                                      FontSize="12"
                                      FontWeight="Medium"
                                      Opacity="0.8"/>
                            <TextBlock Text="Cal = Calories"
                                      FontSize="11"
                                      Opacity="0.6"/>
                            <TextBlock Text="P = Protein"
                                      FontSize="11"
                                      Opacity="0.6"/>
                            <TextBlock Text="F = Fat"
                                      FontSize="11"
                                      Opacity="0.6"/>
                            <TextBlock Text="C = Carbohydrates"
                                      FontSize="11"
                                      Opacity="0.6"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
