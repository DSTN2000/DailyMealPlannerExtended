<userControls:ToastControl xmlns="https://github.com/avaloniaui"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:userControls="clr-namespace:ToastNotificationAvalonia.UserControls;assembly=ToastNotificationAvalonia"
                           xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
                           x:Class="DailyMealPlannerExtended.Views.Toasts.ErrorToast">
    <Border Background="#E53935"
            CornerRadius="12"
            Padding="16"
            BoxShadow="0 4 12 0 #40000000">
        <Grid ColumnDefinitions="Auto,*">
            <materialIcons:MaterialIcon Grid.Column="0"
                                       Kind="AlertCircle"
                                       Width="24"
                                       Height="24"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
            <TextBlock Grid.Column="1"
                      Name="MessageTextBlock"
                      Text="Error message"
                      Foreground="White"
                      FontSize="14"
                      TextWrapping="Wrap"
                      VerticalAlignment="Center"/>
        </Grid>
    </Border>
</userControls:ToastControl>
